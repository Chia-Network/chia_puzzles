(mod (Conditions)
  (include utility_macros.clib)
  (include condition_codes.clib)

  (defun check_coins (conditions)
    (if conditions
      (if (= (f (f conditions)) CREATE_PUZZLE_ANNOUNCEMENT)
        (x)
        (check_coins (r conditions))
      )
      1
    )
  )

  (assert (check_coins Conditions) Conditions)
)
